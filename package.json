    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@types/file-saver": "^2.0.7",
    "@types/ms": "^0.7.34",
    "@types/node-schedule": "^2.1.7",
    "@types/pg": "^8.15.4",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "dexie": "^4.0.11",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
