    "prettier-plugin-tailwindcss": "^0.6.13",
    "svelte": "^5.35.2",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "unplugin-icons": "^0.22.0",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "@fastify/busboy": "^3.1.1",
    "argon2": "^0.41.1",
